<div class="container text-center mt-4">
	<form class="w-auto form text-center form__container d-flex flex-column m-auto gap-3" action="/api/productos" method="post">
		<h1 class="my-3">Ingreso productos</h1>
		<div class="container input-group gap-2">
		<div class="row input-group gap-2 m-auto">
			<label class="col-sm-2 input-group-text">Producto</label>
			<input type="text" name="title" class="col-sm-4 form-control" placeholder="Ingresa Nombre de Producto" required/>
		</div>
		<div class="row input-group gap-2 m-auto">
			<label class="col-sm-2 input-group-text">Precio</label>
			<input type="number" name="price" class="col-sm-4 form-control" placeholder="Ingresa Precio de Producto" required/>
		</div>
		<div class="row input-group gap-2 m-auto">
			<label class="col-sm-2 input-group-text" for="inputGroupSelect01">Imagen</label>
				<select class="form-control form-select col-sm-4" name="thumbnail" required>
					<option value="">Elige una imagen...</option>
					<option value="../img/1.png">Laptop</option>
					<option value="../img/2.png">Monitor</option>
					<option value="../img/3.png">Mouse</option>
					<option value="../img/4.png">USB</option>
					<option value="../img/5.png">Perifericos</option>
					<option value="../img/6.png">HDD</option>
				</select>
			</div>
			</div>
			<div class="container d-flex justify-content-center gap-5 my-4">
				<input type="submit" value="Guardar Producto" class="btn btn-outline-primary" />
				<a href="/api/productos" class="btn btn-outline-info">Lista productos</a>
			</div>
		</form>
</div>