<div class="form cart my-5 mx-5">
	<div class="form form__container mx-1">
		<form class="container d-flex flex-column gap-3 p-4" action="/api/productos" method="post">
			<h1 class="text-center">Ingreso productos</h1>
			<div class="row input-group gap-3">
				<label class="col-2 input-group-text">Producto</label>
				<input type="text" name="title" class="col form-control" placeholder="Ingresa Nombre de Producto" />
			</div>
			<div class="row input-group gap-3">
				<label class="col-2 input-group-text">Precio</label>
				<input type="text" name="price" class="col form-control" placeholder="Ingresa Precio de Producto" />
			</div>
			<div class="row input-group gap-3">
				<label class="col-2 input-group-text">Foto</label>
				<input type="phone" name="thumbnail" class="col form-control" placeholder="Ingresa Url de la foto" />
			</div>
			<div class="d-flex justify-content-center gap-5 mt-4">
				<input type="submit" value="Guardar Producto" class="btn btn-outline-primary" />
                <a href="/api/productos" class="btn btn-outline-info">Lista productos</a>
			</div>
		</form>
	</div>
</div>